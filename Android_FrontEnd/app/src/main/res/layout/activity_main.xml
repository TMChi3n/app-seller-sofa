<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <!-- Title TextView -->

        <!-- User Icon ImageView -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="109dp"
            android:layout_height="34dp"
            android:layout_marginStart="148dp"
            android:text="Sofa"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintBottom_toTopOf="@id/search_cart_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/user"
            android:layout_width="62dp"
            android:layout_height="34dp"
            android:paddingLeft="15dp"
            android:paddingRight="4dp"
            app:srcCompat="@drawable/user_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textView"
            tools:layout_editor_absoluteX="347dp"
            tools:layout_editor_absoluteY="0dp" />

        <!-- Search Section -->
        <LinearLayout
            android:id="@+id/search_cart_user"
            android:layout_width="408dp"
            android:layout_height="43dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView">

            <!-- Search TextInputEditText -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:drawableEnd="@drawable/search_product"
                android:drawablePadding="8dp"
                android:hint="Search..."
                android:inputType="text"
                android:paddingLeft="10dp" />

            <!-- Cart ImageView -->
            <ImageView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="25dp"
                android:paddingRight="8dp"
                app:srcCompat="@drawable/cart_product" />

        </LinearLayout>

        <!-- Introduce Section -->
        <LinearLayout
            android:id="@+id/introduce"
            android:layout_width="410dp"
            android:layout_height="137dp"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            app:layout_constraintBottom_toTopOf="@id/products"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_cart_user">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="361dp"
                android:layout_height="138dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ghe_sale" />
        </LinearLayout>

        <!-- Products Section -->
        <LinearLayout
            android:id="@+id/products"
            android:layout_width="407dp"
            android:layout_height="479dp"
            android:orientation="vertical"
            android:paddingTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/introduce">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_weight="1"
                android:paddingTop="30dp"
                app:srcCompat="@drawable/ghe1" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ghe2" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
